{
  "_comment": "Configuración del backend de Ecommunitas - Plataforma de intercambio comunitario",
  "_description": {
    "es": "Backend para la plataforma Ecommunitas de trueque local y economía circular",
    "en": "Backend for Ecommunitas local bartering and circular economy platform",
    "architecture": "Node.js + Express + MongoDB + TypeScript",
    "features": [
      "API RESTful para gestión de usuarios, items y mensajes",
      "Autenticación JWT con bcrypt",
      "Carga de archivos con Cloudinary",
      "Rate limiting y seguridad con Helmet",
      "Logging profesional con Winston",
      "Sanitización de datos MongoDB",
      "Protección XSS y HPP",
      "Soporte Docker para desarrollo y producción",
      "Testing con Jest",
      "Linting con ESLint y formateo con Prettier",
      "TypeScript para type safety",
      "Hot reload en desarrollo"
    ],
    "scripts_guide": {
      "development": "npm run dev (TypeScript) o npm run start:legacy (JavaScript)",
      "production": "npm run start:prod (build + start)",
      "testing": "npm test (single run) o npm run test:watch (watch mode)",
      "docker": "npm run docker:dev (desarrollo) o npm run docker:prod (producción)",
      "code_quality": "npm run lint, npm run format, npm run type-check"
    }
  },
  "name": "ecommunitas-backend",
  "version": "1.0.0",
  "description": "Backend para la plataforma Ecommunitas de trueque local",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:ts": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start:prod": "npm run build && node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "docker:build": "docker build -t ecommunitas-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ecommunitas-backend",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "start:legacy": "node server.js"
  },
  "keywords": [
    "trueque",
    "economía circular",
    "sostenibilidad",
    "comunidad"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cloudinary": "^2.6.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.2",
    "@types/express-fileupload": "^1.5.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.27",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
